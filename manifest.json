{
  "manifest_version": 3,
  "name": "Site Locker & Water Reminder",
  "version": "1.0",
  "description": "Lock yourself to a site for a set duration and get water reminders!",
  "permissions": ["tabs", "storage", "notifications", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
} 